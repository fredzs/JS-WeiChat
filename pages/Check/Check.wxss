/* pages/Check/Check.wxss */
#check{  
    background: #f5f5f5;  
    margin: 5px;
}  
.section__title{
    float: left;  
    width:100%;  
    padding-top: 5px;  
    padding-bottom: 5px;
    font-weight:600;
}  
.section__left{
    float: left;  
    width:47%;  
    padding-left: 5px;  
    padding-bottom: 5px;
    border: 1px solid #ddd;  
    background-color: #FFFFFF;  
}  
.section__right{
    float: right;  
    width:40%;  
    padding-left: 5px;  
    padding-bottom: 5px;
    border: 1px solid #ddd;  
    background-color: #FFFFFF;  
}
.section_title_left{
    float: left;  
    width:40%;  
    padding-top: 5px;  
    padding-left: 50px;  
    padding-bottom: 5px;
    font-weight:600;
    font-size:16px;
}  
.section_title_right{
    float: right;  
    width:30%;  
    padding-top: 5px;  
    padding-left: 20px;  
    padding-bottom: 5px;
    font-weight:600;
    font-size:16px;
}  
.form-group{  
    float: right;  
    width:65%;  
}  
.section{  
    clear: both;  
    width:90%;  
    margin: auto;  
}  
.picker-view-column{
  line-height: 30px;
  width: 80%;
  font-size:16px;
}
.field_value{  
    font-size:16px;
}  